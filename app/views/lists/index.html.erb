<div class="container d-flex justify-content-center" id="home_image">
  <div class="container-text">
    <h1>Your Lists</h1>
  </div>
</div>

<div class="container">
  <% @lists.each do |list| %>
    <div class="card">
      <%= link_to list.name, "lists/#{list.id}" %>
      <%= cl_image_tag(list.photo.key), height: 300, width: 400, crop: :fill %>
    </div>
  <% end %>

  <%= link_to 'Create a movie list', 'lists/new', class: "btn btn-primary" %>
</div>
